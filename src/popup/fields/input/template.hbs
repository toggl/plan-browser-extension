<div class="row row--grow row--align-center control-group ">
  <label class="control-group__label" data-hook="label"></label>
  <div class="row row--grow row--vertical">
    <div class="row row--align-center row--grow control-group__control" data-hook='control'>
      <input class="control-group__input row--grow" data-hook="input" autocomplete="off" type="text" name="no-autocomplete">
    </div>
    <div class="row row--align-center spacing-2--inner-top font-tiny text--color-new-error" data-hook="error-text">
    </div>
    <div class="row row--align-center spacing-2--inner-top font-tiny text--color-new-link" data-hook="info-text">
    </div>
  </div>
</div>
